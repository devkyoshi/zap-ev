<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:titleTextColor="@color/primary_dark"
            app:navigationIconTint="@color/primary_dark" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Warning Icon -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_warning"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"
                app:tint="@color/amber_600" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Deactivated"
                android:textColor="@color/red_600"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textAlignment="center" />

            <!-- Main Message -->
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your account has been deactivated and cannot be used to access the application at this time."
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"
                android:textAlignment="center"
                 />

            <!-- Contact Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/primary_light"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Contact Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_support"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/primary_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Need Help?"
                            android:textColor="@color/primary_light"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Contact Info Text -->
                    <TextView
                        android:id="@+id/tv_contact_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To reactivate your account, please contact our backoffice team:"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="20dp"
                         />

                    <!-- Email Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/accent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@color/accent"
                                android:textSize="12sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tv_email_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="support@zap-ev.com"
                                android:textColor="@color/primary_dark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Phone Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_phone"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/accent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textColor="@color/accent"
                                android:textSize="12sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tv_phone_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+94 11 234 5678"
                                android:textColor="@color/primary_dark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_contact_support"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Send Email"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/primary_light"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_email"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_call_support"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Call Now"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_light"
                    android:textSize="16sp"
                    app:strokeColor="@color/primary_light"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_phone"
                    app:iconTint="@color/primary_light" />

            </LinearLayout>

            <!-- Help Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our support team is available Monday to Friday, 9 AM to 6 PM. We'll respond to your request within 24 hours."
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginBottom="32dp"
                 />

            <!-- Back to Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back_to_login"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Back to Login"
                android:textAllCaps="false"
                android:textColor="@color/accent"
                android:textSize="16sp"
                app:rippleColor="@color/secondary" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
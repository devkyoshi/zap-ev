<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/card_bg"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/gray_600"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Status Indicator -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/status_indicator"
                android:backgroundTint="@color/primary_light" />

            <!-- Station Name -->
            <TextView
                android:id="@+id/tv_station_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EcoCharge Hub"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- Distance -->
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 km"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_light"
                android:background="@drawable/distance_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

        <!-- Address -->
        <TextView
            android:id="@+id/tv_station_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Main Street, Colombo 01"
            android:textSize="13sp"
            android:textColor="@color/gray_600"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Status and Availability -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_light" />

                <TextView
                    android:id="@+id/tv_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 slots available"
                    android:textSize="11sp"
                    android:textColor="@color/accent" />

            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 15.00/hour"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <!-- Navigate Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_navigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navigate"
                android:textSize="10sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                style="@style/Widget.Material3.Button"
                app:backgroundTint="@color/primary_light" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@color/card_bg"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/gray_600"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Station Name and Distance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_station_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EcoCharge Hub"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 km away"
                android:textSize="14sp"
                android:textColor="@color/gray_600" />

        </LinearLayout>

        <!-- Station Address -->
        <TextView
            android:id="@+id/tv_station_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="123 Main Street, Colombo 01"
            android:textSize="14sp"
            android:textColor="@color/gray_600" />

        <!-- Availability and Rate Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_availability"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 slots available"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_light" />

            <TextView
                android:id="@+id/tv_charging_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LKR 15.00/min"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Book Now Button -->
        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Book Now"
            android:textColor="@color/white"
            android:background="@drawable/btn_rounded_bg"
            android:paddingVertical="10dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
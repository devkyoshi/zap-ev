<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/white"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Session Details"
                    android:textColor="@color/primary_dark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close dialog" />

            </LinearLayout>

            <!-- Customer Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Information"
                android:textColor="@color/primary_light"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/customer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:background="@drawable/bg_rounded_light"
                    android:padding="16dp"
                    android:backgroundTint="@color/white"

                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv_detail_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NIC:"
                            android:textColor="@color/accent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detail_customer_nic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="123456789V"
                            android:textColor="@color/primary_dark"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phone:"
                            android:textColor="@color/accent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detail_customer_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="+94 77 123 4567"
                            android:textColor="@color/primary_dark"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Vehicle Information -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle"
                        android:textColor="@color/accent"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_detail_vehicle_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tesla Model 3 (ABC-1234)"
                        android:textColor="@color/primary_dark"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- Session Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Information"
                android:textColor="@color/primary_light"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/session_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_light"
                    android:backgroundTint="@color/white"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp">

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status:"
                            android:textColor="@color/accent"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_detail_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textColor="@color/primary_light"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_circle_primary"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <!-- Charging Station -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Station:"
                            android:textColor="@color/accent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detail_station"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Colombo Central Station"
                            android:textColor="@color/primary_dark"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Date:"
                            android:textColor="@color/accent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detail_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Oct 6, 2025"
                            android:textColor="@color/primary_dark"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Time Range -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Time:"
                            android:textColor="@color/accent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detail_time_range"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="2:00 PM - 4:00 PM"
                            android:textColor="@color/primary_dark"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Duration:"
                            android:textColor="@color/accent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detail_duration"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="2 hours"
                            android:textColor="@color/primary_dark"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Energy Delivered -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Energy:"
                            android:textColor="@color/accent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detail_energy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="15.2 kWh"
                            android:textColor="@color/primary_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Total Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total:"
                            android:textColor="@color/accent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detail_total_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="$45.60"
                            android:textColor="@color/primary_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- Notes Section (if available) -->
            <LinearLayout
                android:id="@+id/layout_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textColor="@color/primary_light"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_detail_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_light"
                    android:padding="16dp"
                    android:textColor="@color/primary_dark"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp" />

            </LinearLayout>

            <!-- Booking Reference -->
            <TextView
                android:id="@+id/tv_detail_booking_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Reference: BK12345678"
                android:textColor="@color/accent"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Vehicle Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_car"
            android:layout_marginEnd="16dp"
            app:tint="@color/primary_dark"
            android:background="@drawable/bg_round_image"
            android:padding="12dp"/>

        <!-- Vehicle Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVehicleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021 Tesla Model 3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvLicensePlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC-1234"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvVehicleDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make: Tesla â€¢ Model: Model 3"
                android:textSize="12sp"
                android:textColor="@color/gray_600"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditVehicle"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Edit Vehicle"
                app:icon="@drawable/ic_pencil"
                app:iconTint="@color/primary_dark"
                app:iconSize="18dp"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/primary_dark"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteVehicle"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Delete Vehicle"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/red_600"
                app:iconSize="18dp"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/red_600"
                app:strokeWidth="1dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
